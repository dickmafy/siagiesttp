<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- Seguridad y Accesos -->
	<bean id="loginController" class="modules.seguridad.controller.LoginController" scope="session" parent="genericController">
	    <property name="myService" 	ref="seguridadService"/>
	    <property name="beanSearch" ref="usuario"/>	    
	</bean>
	
	<bean id="opcionController" class="modules.seguridad.controller.OpcionController" scope="session" parent="genericController"/>
	
	<bean id="usuarioController" class="modules.seguridad.controller.UsuarioController" scope="session" parent="genericController">
		<property name="bean" 		ref="usuario"/>
		<property name="myService" 	ref="seguridadService"/>
	</bean>
	
	<bean id="perfilController" class="modules.seguridad.controller.PerfilController" scope="session" parent="genericController">
		<property name="bean" 		ref="perfil"/>
		<property name="myService" 	ref="seguridadService"/>
	</bean>
	
	<bean id="variableController" class="modules.seguridad.controller.VariableController" scope="session" parent="genericController">
		<property name="bean" 		ref="variable"/>
		<property name="myService" 	ref="seguridadService"/>
	</bean>
	
	<bean id="logController" class="modules.seguridad.controller.LogController" scope="session" parent="genericController">
		<property name="bean" 		ref="log"/>
	</bean>
</beans>